{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <h1>Users</h1>

    <div
            data-controller="panel"
            data-panel-url-value="{{ mercure('http://' ~ appDomain ~ '/users/{id}') }}"
    >
        <table border="1" width="500">
            {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.isVerified == 1 ? 'verified' : 'not verified' }}</td>
                <td>{{ codes[user.id] | default('') }}</td>
            </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
