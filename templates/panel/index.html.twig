{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <h1>Users</h1>

    <div>
        <table width="500">
            {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.isVerified == 1 ? 'verified' : 'not verified' }}</td>
                <td>{{ codes[user.id] | default('') }}</td>
            </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
